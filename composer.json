  "require": {
    "php": ">=5.5",

    "symfony/process": "^2.8 || ^3.0 || ^4.0",
    "symfony/http-foundation": "^2.8 || ^3.0 || ^4.0",
    "symfony/translation": "^2.8 || ^3.0 || ^4.0",
    "symfony/validator": "^2.8 || ^3.0 || ^4.0",

    "printedcom/cpdf-binary": "^2.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7"
  }
}
