{
  "name": "printed/common",
  "description": "A library of common utilities",
  "type": "library",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Printed Developers",
      "role": "developer"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "git@git.printed.engineering:printed/cpdf-binary.git"
    }
  ],
  "autoload": {
    "psr-4": {
      "Printed\\": "src/Printed/"
    }
